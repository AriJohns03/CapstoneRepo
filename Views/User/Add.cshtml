@model Capstone1.Models.UserModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

    <h2>Create Account</h2>
    <form asp-controller="User" asp-action="Add" method="post">
        <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Create Account</h2>
                    <hr />
                    <br />
                    <div asp-validation-summary="All" class="error-message">
                    </div>
                </div>
            <div class="mb-3">
            <label asp-for="Username" style="color: black;">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="error-message"></span>
            </div>
            <div class="mb-3">
            <label asp-for="Password" style="color: black;">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="error-message"></span>
            </div>
            <div class="mb-3">
            <label asp-for="FirstName" style="color: black;">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="error-message"></span>
            </div>
            <div class="mb-3">
            <label asp-for="LastName" style="color: black;">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="error-message"></span>
            </div>
            <div class="mb-3">
            <label asp-for="DateOfBirth" style="color: black;">Date of Birth</label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="error-message"></span>
            </div>
            <div class="mb-3">
            <label asp-for="Email" style="color: black;">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="error-message"></span>
            </div>
            <div class="mb-3">
            <label asp-for="CompanyName" style="color: black;">Company Name</label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="error-message"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create Account</button>

        </div>
    </form>
