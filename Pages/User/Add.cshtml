@page
@model AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

    <h2>Create Account</h2>
    <form method="post">
        <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Create Account</h2>
                    <hr />
                    <br />
                    <div asp-validation-summary="All" class="error-message">
                    </div>
                </div>
            <div class="mb-3">
            <div class="form-group">
                <label>Username</label>
                <input asp-for="Input.Username" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" required />
            </div>
            <div class="form-group">
                <label>First Name</label>
                <input asp-for="Input.FirstName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input asp-for="Input.LastName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Date Of Birth</label>
                <input asp-for="Input.DateOfBirth" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Company Name</label>
                <input asp-for="Input.CompanyName" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Create Account</button>

        </div>
    </form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="text-danger">@Model.Message</p>
}
