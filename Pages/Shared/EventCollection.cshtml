@using Capstone1.Models
@model IEnumerable<Capstone1.Models.Event>


<h2>View your profile here</h2>


<br />
<br />
<br />
<h1>Event List</h1>

<br />
<br />
<br />
<br />

<h2>There is @Model.Count() events in the listing at the moment</h2>

@if (Model == null)
{
    <h2>No Events Found</h2>
}
else
{
    @foreach(Event e in Model){
        <div class="event-card">
            <h3>@e.Name</h3>
            <p><strong>Event ID:</strong> @e.Id</p>
            <p><strong>Event Time:</strong> @e.Time</p>
            <p><strong>Event Date:</strong> @e.Date</p>
            <p><strong>Event Location:</strong> @e.Location</p>
            <p><strong>Event Age Restriction:</strong> @e.AgeRestriction+</p>
            <p><strong>Event Description:</strong> @e.Description</p>
        </div>
    }
}


